[Unit]
Description=testwebapp service
After=syslog.target network.target

[Service]
SuccessExitStatus=143

User=root
Group=root

Type=simple

WorkingDirectory={{ webApp_location }}
ExecStart=java -jar {{ webApp_location }}/{{ webApp_name }} -p8080
ExecStop=/bin/kill -15 $MAINPID

[Install]
WantedBy=multi-user.target